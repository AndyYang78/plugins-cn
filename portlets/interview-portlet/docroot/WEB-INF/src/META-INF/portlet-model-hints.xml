<?xml version="1.0"?>

<model-hints>
	<model name="com.liferay.interview.model.Interview">
		<field name="uuid" type="String" />
		<field name="interviewId" type="long" />
		<field name="userId" type="long" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="name" type="String" />
		<field name="emailAddress" type="String" />
		<field name="startDate" type="Date" />
		<field name="expireDate" type="Date" />
		<field name="questionSetId" type="long" />
		<field name="response" type="String">
			<hint name="max-length">50000</hint>
		</field>
	</model>
	<model name="com.liferay.interview.model.Question">
		<field name="questionId" type="long" />
		<field name="userId" type="long" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="questionSetId" type="long" />
